@model Rent.Models.RegisterViewModel
@{
    ViewBag.Title = "Rejestracja nowego użytkownika";
}


<link href="@Url.Content("~/Content/Register2.css")" rel="stylesheet" type="text/css" />

<h2 class="text-center">@ViewBag.Title.</h2>


        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()    
            <br/><br/>
            <hr />
           // @Html.ValidationSummary("", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label mb-1" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.Email)
            </div>



            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label mt-2 mb-1" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.Password)
            </div>



            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label mt-2 mb-1" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label mt-2 mb-1" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.Name)
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Address.Code, new { @class = "col-md-2 control-label mt-2 mb-1" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Address.Code, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.Address.Code)
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Address.City, new { @class = "col-md-2 control-label mt-2 mb-1" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Address.City, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.Address.City)
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Address.Street, new { @class = "col-md-2 control-label mt-2 mb-1" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Address.Street, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.Address.Street)
            </div>



            <div class="form-group">
                @Html.LabelFor(m => m.Address.Number, new { @class = "col-md-2 control-label mt-2 mb-1" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Address.Number, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.Address.Number)
            </div>


            <br/> <br/>

            
            <div class="col-md-offset-2 col-md-10">
                <div class="buttonSubmit">
                    <input type="submit" class="btn btn-primary mx-2" value="Rejestracja" />
                </div>
            </div>
        }


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
